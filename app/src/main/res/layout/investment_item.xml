<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff3f3f2">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/item_bg_plan"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/invest_iv_flag"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/investment_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/invest_iv_flag"
                android:text="小火球"
                android:layout_marginLeft="@dimen/dp10"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:textColor="#353535"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/plan_line" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_gravity="left"
                    android:text="持有份股 (份)"
                    android:textColor="#353535"
                    android:textSize="@dimen/sp15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="3"
                    android:textColor="#353535"
                    android:textSize="@dimen/sp15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_yield"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_gravity="left"
                    android:text="昨日收益(元)"
                    android:textColor="#353535"
                    android:textSize="@dimen/sp15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_yield_count"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="0.00"
                    android:textColor="#d74a43"
                    android:textSize="@dimen/sp15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_process"
        android:text="项目进展"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingBottom="@dimen/dp5"
        android:paddingTop="@dimen/dp5"
        android:paddingRight="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp5"
        android:layout_marginTop="@dimen/dp18"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/sp13"
        android:textStyle="bold"
        android:background="@mipmap/invest_text_bk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>