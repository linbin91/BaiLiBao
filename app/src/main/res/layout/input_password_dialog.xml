<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="@dimen/dp11"
            android:layout_marginTop="@dimen/dp11"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/dp11"
            android:textStyle="bold"
            android:textSize="@dimen/sp18"
            android:text="请输入登录密码"
            android:textColor="@color/item_background_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_password"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp1"
            android:layout_marginTop="@dimen/dp11"
            android:paddingTop="@dimen/dp11"
            android:paddingBottom="@dimen/dp11"
            android:background="@color/white"
            android:hint="请输入登录密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingBottom="@dimen/dp11"
        android:paddingTop="@dimen/dp11"
        android:background="@color/huoqiufontgray_index"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_ok"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:background="@color/item_background_white"
            android:gravity="center"
            android:textSize="@dimen/sp15"
            android:text="确定"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:padding="@dimen/dp11"
            android:background="@color/item_background_white"
            android:gravity="center"
            android:textSize="@dimen/sp15"
            android:text="取消"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>