<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/dp15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/fragment_new_user_bk"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp40"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一元起购"
                        android:textColor="@color/fragment_new_user_buy"
                        android:textSize="@dimen/sp15"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/huoqiuplans_fragment_multiple"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="12.00%"
                            android:textColor="@color/fragment_new_user_buy"
                            android:textSize="@dimen/new_buy_font"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:id="@+id/huoqiuplans_fragment_line"
                        android:layout_width="100.0dip"
                        android:layout_height="0.5dip"
                        android:background="@color/huoqiuLightblackColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="年化收益率"
                        android:textColor="@color/fragment_new_user_income"
                        android:textSize="@dimen/sp11" />

                    <TextView
                        android:id="@+id/tv_indrodct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="上限一万 期限7天"
                        android:textColor="@color/fragment_new_user_buy"
                        android:textSize="@dimen/sp11" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/new_user_buy"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/ellipse_rectangle_button"
                android:gravity="center"
                android:text="购买"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15"
                android:textStyle="bold" />

        </FrameLayout>

        <TextView
            android:id="@+id/huoqiuplans_fragment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center"
            android:text="@string/safe_tips"
            android:textColor="@color/fragment_new_user_income"
            android:textSize="@dimen/sp12" />
    </LinearLayout>

    <include layout="@layout/loading_view"/>

</RelativeLayout>