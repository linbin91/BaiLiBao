<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/activity_investment_title"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_alignParentTop="true"
            android:background="@mipmap/title_red_bg">

            <ImageView
                android:id="@+id/title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp11"
                android:src="@mipmap/title_left_back" />

            <TextView
                android:id="@+id/title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="交易记录"
                android:textStyle="bold"
                android:textColor="@color/lock_top_fontcolor"
                android:textSize="@dimen/sp18" />

        </RelativeLayout>

        <LinearLayout
            android:background="#f1f1f1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/record_ll_operate"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/all_operation" />

                <TextView
                    android:id="@+id/tv_operate"
                    android:layout_marginLeft="@dimen/dp3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="全部操作"
                    android:textColor="#353535"
                    android:textSize="@dimen/sp15" />

                <ImageView
                    android:id="@+id/record_iv_operate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/arrow_down" />
            </LinearLayout>

            <View
                android:id="@+id/dividing_line"
                android:layout_width="0.5dip"
                android:layout_height="@dimen/dp30"
                android:layout_gravity="center_vertical"
                android:background="@color/dividing_line_handle_cate" />

            <LinearLayout
                android:id="@+id/record_ll_cate"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/all_product_icon" />

                <TextView
                    android:id="@+id/tv_product"
                    android:layout_marginLeft="@dimen/dp3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="全部产品"
                    android:textColor="#353535"
                    android:textSize="@dimen/sp15" />

                <ImageView
                    android:id="@+id/record_iv_cate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/arrow_down" />
            </LinearLayout>

            <View
                android:layout_width="0.5dip"
                android:layout_height="@dimen/dp30"
                android:layout_gravity="center_vertical"
                android:background="@color/dividing_line_handle_cate" />

            <LinearLayout
                android:id="@+id/record_ll_time"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/all_time_icon" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginLeft="@dimen/dp3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="全部时间"
                    android:textColor="#353535"
                    android:textSize="@dimen/sp15" />

                <ImageView
                    android:id="@+id/record_iv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/arrow_down" />
            </LinearLayout>
        </LinearLayout>

        <com.bailibao.view.pullview.PullToRefreshListView
            android:background="@color/white"
            android:id="@+id/record_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="@null" />
    </LinearLayout>
   <include layout="@layout/loading_view"/>
</RelativeLayout>